<%= form_with model: @person, class: "form-horizontal" do |form| %>

  <% if not admin_signed_in? %>
  <div class="form-group">
    <%= form.label :name, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= form.text_field :name, class: "form-control" %>
    </div>
  </div>
  <% end %>

  <div class="form-group">
    <%= form.label :announcement, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= form.text_field :announcement, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :age, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= form.number_field :age, class: "form-control" %>
    </div>
  </div>

<br>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= form.submit "Save", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>


